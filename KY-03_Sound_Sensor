#define SOUND_SENSOR 2  // KY-038 D0 â†’ D2

void setup() {
    Serial.begin(9600);
    pinMode(SOUND_SENSOR, INPUT);
}

void loop() {
    if (digitalRead(SOUND_SENSOR) == HIGH) {
        Serial.println("ðŸ”Š Loud Sound Detected!");
    } else {
        Serial.println("ðŸ”‡ No Sound");
    }
    delay(500);
}
