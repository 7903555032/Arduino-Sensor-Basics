//TRANSMITTER CODE
#include <RCSwitch.h>

RCSwitch mySwitch = RCSwitch();

void setup() {
    Serial.begin(9600);
    mySwitch.enableTransmit(4);  // Transmitter DATA pin â†’ D4
}

void loop() {
    mySwitch.send("12345", 24);  // Send signal (5-digit code)
    Serial.println("Message Sent: 12345");
    delay(2000);  // Send every 2 seconds
}


//RECEIVER CODE
RCSwitch mySwitch = RCSwitch();

void setup() {
    Serial.begin(9600);
    mySwitch.enableReceive(11);  // Receiver DATA pin â†’ D11
}

void loop() {
    if (mySwitch.available()) {
        Serial.print("Received Message:");
        Serial.println(mySwitch.getReceivedValue());  // Print received message
        mySwitch.resetAvailable();
    }
}

/*
 you donâ€™t need two Arduino boards if you just want to test the 433MHz RF transmitter and receiver. But if you want to communicate wirelessly between two Arduino boards, then yes, youâ€™ll need two.
*/

/*
 433MHz RF Transmitter (MX-FS-03V) - 3 Pins
Pin	    Connection
VCC    	5V (Arduino)
GND   	GND (Arduino)
DATA   	Any digital pin (D4)

ðŸ”¹ 433MHz RF Receiver (MX-05V) - 4 Pins
Pin	    Connection
VCC	    5V (Arduino)
GND   	GND (Arduino)
DATA   	D11 (Can be any digital pin)
DATA	  (Duplicate, use either one)
*/

